{% extends './admin/layout/base.html.twig' %}

{% block title %}Page{% endblock %}

{% block body %}
    <h1>Page</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ page.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ page.slug }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ page.priority }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ page.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_visible</th>
                <td>{{ page.isVisible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Caption</th>
                <td>{{ page.caption }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ page.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_page_index') }}">back to list</a>

    <a href="{{ path('app_admin_page_edit', {'id': page.id}) }}">edit</a>

    {{ include('admin/page/_delete_form.html.twig') }}
{% endblock %}
