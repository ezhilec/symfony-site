{% extends './admin/layout/base.html.twig' %}

{% block body %}
    <h1>ProductCategory</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product_category.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product_category.slug }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product_category.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if product_category.image %}
                        <img src="{{ asset(getUploadsDir() ~ product_category.image) }}" width="200" alt="">
                    {% else %}
                        No image available
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>description</th>
                <td>{{ product_category.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_product_category_index') }}">back to list</a>

    <a href="{{ path('app_admin_product_category_edit', {'id': product_category.id}) }}">edit</a>

    {{ include('admin/product_category/_delete_form.html.twig') }}
{% endblock %}
